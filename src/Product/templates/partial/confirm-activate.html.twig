{% set dummy = form.setAttribute('id', 'ajaxForm') %}
{% set dummy = form.setAttribute('action', activateUri) %}
{% set dummy = form.prepare() %}

{{ form().openTag(form) | raw }}

<div class="form-group">
    {% for entity in entities %}
      <input type="hidden" name="ids[]" value="{{ entity.id }}">
    {% endfor %}
</div>

<div class="checkbox">
  <label>
    <input type="hidden" name="confirm" value="no">
    <input type="checkbox" name="confirm" value="yes"> Are you sure you want to activate the selected items?
  </label>
</div>

<div class="form-group">
    {{ formElement(form.get('confirm_activate_csrf')) }}
</div>

{{ form().closeTag() | raw }}
